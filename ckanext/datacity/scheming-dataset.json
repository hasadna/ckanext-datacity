{
  "scheming_version": 1,
  "dataset_type": "dataset",
  "dataset_fields": [
    {
      "field_name": "title",
      "label": "Title",
      "preset": "title",
      "form_placeholder": "eg. A descriptive title"
    },
    {
      "field_name": "title_ar",
      "label": "Title (Arabic)",
      "display_snippet": null
    },
    {
      "field_name": "title_en",
      "label": "Title (English)",
      "display_snippet": null
    },
    {
      "field_name": "name",
      "label": "URL",
      "preset": "dataset_slug",
      "form_placeholder": "eg. my-dataset"
    },
    {
      "field_name": "notes",
      "label": "Description",
      "form_snippet": "markdown.html",
      "form_placeholder": "eg. Some useful notes about the data"
    },
    {
      "field_name": "notes_ar",
      "label": "Description (Arabic)",
      "form_snippet": "markdown.html"
    },
    {
      "field_name": "notes_en",
      "label": "Description (English)",
      "form_snippet": "markdown.html"
    },
    {
      "field_name": "tag_string",
      "label": "Tags",
      "preset": "tag_string_autocomplete",
      "form_placeholder": "eg. economy, mental health, government"
    },
    {
      "field_name": "license_id",
      "label": "License",
      "form_snippet": "license.html",
      "help_text": "License definitions and additional information can be found at http://opendefinition.org/",
      "default": "odc-odbl"
    },
    {
      "field_name": "owner_org",
      "label": "Organization",
      "preset": "dataset_organization"
    },
    {
      "field_name": "url",
      "label": "Source",
      "form_placeholder": "http://example.com/dataset.json",
      "display_property": "foaf:homepage",
      "display_snippet": "link.html"
    },
    {
      "field_name": "version",
      "label": "Version",
      "validators": "ignore_missing unicode package_version_validator",
      "form_placeholder": "1.0",
      "default": "1.0"
    },
    {
      "field_name": "author",
      "label": {
        "en_US": "Author (Hebrew)",
        "he": "מחבר (עברית)",
        "ar": "مؤلف (عبري)"
      },
      "form_placeholder": "Joe Bloggs",
      "display_property": "dc:creator"
    },
    {
      "field_name": "author_ar",
      "label": {
        "en_US": "Author (Arabic)",
        "he": "מחבר (ערבית)",
        "ar": "مؤلف (ارابيا)"
      },
      "form_placeholder": "Joe Bloggs",
      "display_property": "dc:creator"
    },
    {
      "field_name": "author_en",
      "label": {
        "en_US": "Author (English)",
        "he": "מחבר (אנגלית)",
        "ar": "مؤلف (آدمية)"
      },
      "form_placeholder": "Joe Bloggs",
      "display_property": "dc:creator"
    },
    {
      "field_name": "author_email",
      "label": "Author Email",
      "form_placeholder": "joe@example.com",
      "display_property": "dc:creator",
      "display_snippet": "email.html",
      "display_email_name_field": "author"
    },
    {
      "field_name": "maintainer",
      "label": {
        "en_US": "Maintainer (Hebrew)",
        "he": "אחראי (עברית)",
        "ar": "عامل صيانة (عبري)"
      },
      "form_placeholder": "Joe Bloggs",
      "display_property": "dc:contributor"
    },
    {
      "field_name": "maintainer_ar",
      "label": {
        "en_US": "Maintainer (Arabic)",
        "he": "אחראי (ערבית)",
        "ar": "عامل صيانة (ارابيا)"
      },
      "form_placeholder": "Joe Bloggs",
      "display_property": "dc:contributor"
    },
    {
      "field_name": "maintainer_en",
      "label": {
        "en_US": "Maintainer (English)",
        "he": "אחראי (אנגלית)",
        "ar": "عامل صيانة (آدمية)"
      },
      "form_placeholder": "Joe Bloggs",
      "display_property": "dc:contributor"
    },
    {
      "field_name": "maintainer_email",
      "label": "Maintainer Email",
      "form_placeholder": "joe@example.com",
      "display_property": "dc:contributor",
      "display_snippet": "email.html",
      "display_email_name_field": "maintainer"
    },
    {
      "field_name": "update_period",
      "label": {
        "en_US": "Update Period",
        "he": "תדירות עדכון",
        "ar": "فترة التحديث"
      },
      "preset": "select",
      "choices": [
        {
          "value": "online",
          "label": {
            "en_US": "Online",
            "he": "באופן מיידי",
            "ar": "في الحال"
          }
        },
        {
          "value": "near_real_time",
          "label": {
            "en_US": "Near real time",
            "he": "כמעט באופן מיידי",
            "ar": "قرب الوقت الحقيقي"
          }
        },
        {
          "value": "hourly",
          "label": {
            "en_US": "Hourly",
            "he": "אחת לשעה",
            "ar": "ساعيا"
          }
        },
        {
          "value": "daily",
          "label": {
            "en_US": "Daily",
            "he": "אחת ליום",
            "ar": "يوميًا"
          }
        },
        {
          "value": "weekly",
          "label": {
            "en_US": "Weekly",
            "he": "אחת לשבוע",
            "ar": "أسبوعي"
          }
        },
        {
          "value": "monthly",
          "label": {
            "en_US": "Monthly",
            "he": "אחת לחודש",
            "ar": "شهريا"
          }
        },
        {
          "value": "quarterly",
          "label": {
            "en_US": "Quarterly",
            "he": "אחת לרבעון",
            "ar": "ربعي"
          }
        },
        {
          "value": "yearly",
          "label": {
            "en_US": "Yearly",
            "he": "אחת לשנה",
            "ar": "سنوي"
          }
        },
        {
          "value": "manually",
          "label": {
            "en_US": "Manually",
            "he": "לפי צורך / באופן ייזום",
            "ar": "يدويا"
          }
        }
      ]
    }
  ],
  "resource_fields": [
    {
      "field_name": "url",
      "label": "URL",
      "preset": "resource_url_upload"
    },
    {
      "field_name": "name",
      "label": "Name",
      "form_placeholder": "eg. January 2011 Gold Prices"
    },
    {
      "field_name": "name_ar",
      "label": "Name (Arabic)",
      "form_placeholder": "eg. January 2011 Gold Prices"
    },
    {
      "field_name": "name_en",
      "label": "Name (English)",
      "form_placeholder": "eg. January 2011 Gold Prices"
    },
    {
      "field_name": "description",
      "label": "Description",
      "form_snippet": "markdown.html",
      "form_placeholder": "Some useful notes about the data"
    },
    {
      "field_name": "description_ar",
      "label": "Description (Arabic)",
      "form_snippet": "markdown.html",
      "form_placeholder": "Some useful notes about the data"
    },
    {
      "field_name": "description_en",
      "label": "Description (English)",
      "form_snippet": "markdown.html",
      "form_placeholder": "Some useful notes about the data"
    },
    {
      "field_name": "format",
      "label": "Format",
      "preset": "resource_format_autocomplete"
    },
    {
      "field_name": "type",
      "label": {
        "he": "סוג",
        "en_US": "Type",
        "ar": "يكتب"
      },
      "preset": "select",
      "choices": [
        {
          "value": "table",
          "label": {
            "he": "טבלה",
            "en_US": "Table",
            "ar": "طاولة"
          }
        },
        {
          "value": "map",
          "label": {
            "he": "מפה",
            "en_US": "Map",
            "ar": "خريطة"
          }
        }
      ]
    },
    {
      "field_name": "years",
      "label": {
        "he": "לאילו שנים מתייחסים הנתונים",
        "en_US": "Years",
        "ar": "سنين"
      }
    },
    {
      "field_name": "geo_lat_field",
      "label": {
        "he": "מידע גאוגרפי: עמודת lat",
        "en_US": "Geo data: lat column",
        "ar": "البيانات الجغرافية: lat"
      }
    },
    {
      "field_name": "geo_lon_field",
      "label": {
        "he": "מידע גאוגרפי: עמודת lon",
        "en_US": "Geo data: lon column",
        "ar": "البيانات الجغرافية: lon"
      }
    }
  ]
}