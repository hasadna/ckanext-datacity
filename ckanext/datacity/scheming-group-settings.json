{
  "scheming_version": 1,
  "group_type": "settings",
  "about_url": "http://github.com/ckan/ckanext-scheming",
  "fields": [
    {
      "field_name": "title",
      "label": "Name",
      "validators": "ignore_missing unicode",
      "form_snippet": "large_text.html",
      "form_attrs": {"data-module": "slug-preview-target"}
    },
    {
      "field_name": "name",
      "label": "URL",
      "validators": "not_empty unicode name_validator group_name_validator",
      "form_snippet": "slug.html"
    },
    {
      "field_name": "site_title_he",
      "label": "Site Title Hebrew"
    },
    {
      "field_name": "site_title_en_US",
      "label": "Site Title English",
      "lang_support": "english"
    },
    {
      "field_name": "site_title_ar",
      "label": "Site Title Arabic",
      "lang_support": "arabic"
    },
    {
      "field_name": "default_global_font",
      "label": "Default Global Font",
      "preset": "select", "choices": [{"value":  "Rubik", "label":  "Default font"}, {"value":  "Assistant", "label":  "Assistant"}]
    },
    {
      "field_name": "default_global_text_color",
      "label": "Default Global Text Color"
    },
    {
      "field_name": "homepage_override_title_he",
      "label": "Override Homepage Site Title Hebrew"
    },
    {
      "field_name": "homepage_override_title_en_US",
      "label": "Override Homepage Site Title English",
      "lang_support": "english"
    },
    {
      "field_name": "homepage_override_title_ar",
      "label": "Override Homepage Site Title Arabic",
      "lang_support": "arabic"
    },
    {
      "field_name": "site_sharing_image_url",
      "label": "Sharing image URL",
      "help_text": "Image should be 256px X 256px and less then 300KB"
    },
    {
      "field_name": "hide_register_link",
      "label": "Hide the registration link",
      "preset": "select", "choices": [{"value": "no", "label": "No"}, {"value": "yes", "label": "Yes"}]
    },
    {
      "field_name": "hide_login_header",
      "label": "Hide the login/register header",
      "preset": "select", "choices": [{"value": "no", "label": "No"}, {"value": "yes", "label": "Yes"}]
    },
    {
      "field_name": "header_navbar_style",
      "label" : "Header Navbar Style",
      "preset": "select", "choices": [{"value":  "default", "label":  "Default style"}, {"value":  "city-logo-left", "label":  "City Logo aligned to the left"}]
    },
    {
      "field_name": "top_header_background_color",
      "label": "Top header background color"
    },
    {
      "field_name": "menu_background_color",
      "label": "Menu background color"
    },
    {
      "field_name": "menu_text_color",
      "label": "Menu text color"
    },
    {
      "field_name": "menu_highlight_color",
      "label": "Menu highlight color"
    },
    {
      "field_name": "menu_design",
      "label": "Menu design",
      "preset": "select", "choices": [{"value":  "default", "label":  "Default style"}, {"value":  "alternative1", "label":  "Alternative 1"}]
    },
    {
      "field_name": "datacity_logo_url",
      "label": "Datacity logo URL"
    },
    {
      "field_name": "homepage_title_text_color",
      "label": "Homepage title text color"
    },
    {
      "field_name": "homepage_title_background_color",
      "label": "Homepage title background color"
    },
    {
      "field_name": "homepage_title_border_color",
      "label": "Homepage title border color (relevant for desktop/tablet browsers only)"
    },
    {
      "field_name": "homepage_title_text_line_1",
      "label": "Homepage title text line 1"
    },
    {
      "field_name": "homepage_title_text_line_2",
      "label": "Homepage title text line 2"
    },
    {
      "field_name": "homepage_title_background_image_url",
      "label": "Homepage title background image url"
    },
    {
      "field_name": "homepage_title_design",
      "label": "Homepage title design",
      "preset": "select", "choices": [
        {"value":  "default", "label":  "Default style"},
        {"value":  "single-line-side", "label":  "Single Line Side"}
      ]
    },
    {
      "field_name": "homepage_groups_background_color",
      "label": "Homepage groups background color"
    },
    {
      "field_name": "homepage_groups_text_color",
      "label": "Homepage groups text color"
    },
    {
      "field_name": "homepage_groups_inner_background_color",
      "label": "Homepage groups inner background color"
    },
    {
      "field_name": "homepage_groups_inner_hover_background_color",
      "label": "Homepage groups inner hover background color"
    },
    {
      "field_name": "homepage_groups_inner_text_color",
      "label": "Homepage groups inner text color"
    },
    {
      "field_name": "homepage_datasets_background_color",
      "label": "Homepage datasets background color"
    },
    {
      "field_name": "homepage_datasets_button_hover_background_color",
      "label": "Homepage datasets button hover background color"
    },
    {
      "field_name": "homepage_datasets_text_color",
      "label": "Homepage datasets text color"
    },
    {
      "field_name": "homepage_datasets_all_datasets_design",
      "label": "Homepage datasets all datasets button design",
      "preset": "select", "choices": [
          {"value":  "default", "label":  "Default style"},
          {"value":  "alternative1", "label":  "Alternative 1"}
      ]
    },
    {
      "field_name": "homepage_featured_packages_num",
      "label": "Homepage groups number of packages to display per component"
    },
    {
      "field_name": "footer_background_color",
      "label": "Footer background color"
    },
    {
      "field_name": "footer_separator_color",
      "label": "Footer separator color"
    },
    {
      "field_name":  "footer_links_markdown_he",
      "label": "Footer Links Markdown Hebrew",
      "form_snippet": "footer_links_markdown_with_html.html",
      "form_placeholder": "* [קישור ראשון](https://www.example.com)\n* [קישור שני](https://www.example.com)"
    },
    {
      "field_name":  "footer_links_markdown_en_US",
      "label": "Footer Links Markdown English",
      "form_snippet": "footer_links_markdown_with_html.html",
      "form_placeholder": "* [first link](https://www.example.com)\n* [second link](https://www.example.com)",
      "lang_support": "english"
    },
    {
      "field_name":  "footer_links_markdown_ar",
      "label": "Footer Links Markdown Arabic",
      "form_snippet": "footer_links_markdown_with_html.html",
      "form_placeholder": "* [الرابط الثاني](https://www.example.com)\n* [رابط واحد](https://www.example.com)",
      "lang_support": "arabic"
    },
    {
      "field_name": "footer_design",
      "label": "Footer design",
      "preset": "select", "choices": [
        {"value":  "default", "label":  "Default style"},
        {"value":  "alternative1", "label":  "Alternative 1"}
      ]
    },
    {
      "field_name": "about_markdown_he",
      "label" : "About Markdown Hebrew",
      "form_snippet": "markdown.html"
    },
    {
      "field_name": "about_markdown_en_US",
      "label" : "About Markdown English",
      "form_snippet": "markdown.html",
      "lang_support": "english"
    },
    {
      "field_name": "about_markdown_ar",
      "label" : "About Markdown Arabic",
      "form_snippet": "markdown.html",
      "lang_support": "arabic"
    },
    {
      "field_name": "google_analytics_tracking_id",
      "label" : "Google Analytics Tracking ID",
      "help_text": "Get it from Google Analytics > Admin > Tracking Info > Tracking Code"
    },
    {
      "field_name": "arabic_language_support",
      "label": "Arabic language support",
      "preset": "select", "choices": [{"value": "no", "label": "No"}, {"value": "yes", "label": "Yes"}]
    },
    {
      "field_name": "english_language_support",
      "label": "English language support",
      "preset": "select", "choices": [{"value": "no", "label": "No"}, {"value": "yes", "label": "Yes"}]
    }
  ]
}
